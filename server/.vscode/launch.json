    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "MQTT Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/controller/server.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Flask Server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "web_server.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--cert", "certs/cert.pem",
                "--key", "certs/key.pem"
            ]
        }
    ]
}